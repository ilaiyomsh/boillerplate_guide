{
  "guide_structure": {
    "chapters": "dynamic", 
    "sections_per_chapter": "dynamic",
    "navigation_files": [
      "src/components/Navigation/Navigation.jsx",
      "src/pages/Home/Home.jsx"
    ]
  },
  "file_locations": {
    "chapter_template": "src/pages/Chapter{number}/",
    "files_per_chapter": [
      "ChapterIndex.jsx",
      "Section{section}.jsx"
    ],
    "routing_file": "src/App.js"
  },
  "editing_targets": {
    "chapter_titles": {
      "file": "src/components/Navigation/Navigation.jsx",
      "pattern": "{ num: {number}, title: \"{title}\" }"
    },
    "chapter_descriptions": {
      "file": "src/pages/Home/Home.jsx",
      "pattern": "{ num: {number}, title: \"{title}\", description: \"{description}\" }"
    },
    "chapter_content": {
      "file_pattern": "src/pages/Chapter{number}/ChapterIndex.jsx",
      "editable_sections": [
        { "name": "title", "pattern": "title=\"פרק {number}: {title}\"" },
        { "name": "intro_paragraph", "element": "<p>" },
        { "name": "learning_objectives", "element": "<ul><li>" },
        { "name": "section_links", "pattern": "<h3>סעיף {chapter}.{section}: {title}</h3><p>{description}</p>" }
      ]
    },
    "section_content": {
      "file_pattern": "src/pages/Chapter{chapter}/Section{section}.jsx",
      "editable_sections": [
        { "name": "title", "pattern": "title=\"סעיף {chapter}.{section}: {title}\"" },
        {
          "name": "content_body",
          "allowed_elements": [
            "<p>", "<h2>", "<h3>", "<ul>", "<ol>", "<li>",
            "<strong>", "<em>", "<blockquote>",
            "<table>", "<thead>", "<tbody>", "<tr>", "<th>", "<td>",
            "<a href=\"\" target=\"_blank\" rel=\"noopener noreferrer\">"
          ]
        },
        {
          "name": "images",
          "pattern": "שם: {file} | מלל: {caption} | רוחב: {width?}"
        },
        {
          "name": "important_notes",
          "element": "<blockquote>",
          "pattern": "<blockquote><strong>{type}:</strong> {content}</blockquote>",
          "note_types": ["שימו לב", "טיפ", "אזהרה", "חשוב", "לזכור"]
        }
      ]
    }
  },
  "navigation_logic": {
    "chapter_index": {
      "prev_path_logic": "chapter > 1 ? `/chapter${chapter-1}/section{lastSection}` : `/`",
      "next_path_logic": "`/chapter${chapter}/section1`",
      "prev_title_logic": "chapter > 1 ? `סעיף ${chapter-1}.{lastSection}` : `בית`",
      "next_title_logic": "`סעיף 1`"
    },
    "section_navigation": {
      "section_1": {
        "prev_path": "`/chapter${chapter}`",
        "next_path": "`/chapter${chapter}/section${section+1}`",
        "prev_title": "`פרק ${chapter}`",
        "next_title": "`סעיף ${chapter}.${section+1}`"
      },
      "section_middle": {
        "prev_path": "`/chapter${chapter}/section${section-1}`",
        "next_path": "`/chapter${chapter}/section${section+1}`",
        "prev_title": "`סעיף ${chapter}.${section-1}`",
        "next_title": "`סעיף ${chapter}.${section+1}`"
      },
      "section_last": {
        "prev_path": "`/chapter${chapter}/section${section-1}`",
        "next_path_logic": "chapter < totalChapters ? `/chapter${chapter+1}` : `/`",
        "prev_title": "`סעיף ${chapter}.${section-1}`",
        "next_title_logic": "chapter < totalChapters ? `פרק ${chapter+1}` : `בית`"
      }
    }
  },
  "validation_checklist": {
    "after_editing": [
      "npm run build - פרויקט עובר build",
      "npm start - אין שגיאות בקונסול",
      "כל הקישורים עובדים",
      "המבנה תואם לקובץ התוכן (מספר פרקים/סעיפים)",
      "עיצוב רספונסיבי תקין",
      "תוכן בעברית ו-RTL"
    ]
  }
}
